@using EventManagingSystem.BLL
@using EventManagingSystem.Entities
@{   
    EventManager eventManager = new EventManager();
     Event Event = eventManager.GetEvent();
}

<section id="home" class="home-cover">
    <div class="cover_slider owl-carousel owl-theme">
        <div class="cover_item" style="background: url(@Event.EventImage);">
            <div class="slider_content">
                <div class="slider-content-inner">
                    <div class="container">
                        <div class="slider-content-center">
                            <h2 class="cover-title">
                               @Event.Category.CategoryName
                            </h2>
                            <strong class="cover-xl-text">@Event.EventName</strong>
                            <p class="cover-date">
                                @Event.ApplicationDate  - @Event.Location
                            </p>
                            <a href="#" class=" btn btn-primary btn-rounded">
                                Join
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
    <div class="cover_nav">
        <ul class="cover_dots">
            <li class="active" data="0"><span>1</span></li>
            <li data="1"><span>2</span></li>
            <li data="2"><span>3</span></li>
        </ul>
    </div>
</section>


<section class="pt100 pb100">
    <div class="container">
        <div class="row justify-content-center">
            
            
            <div class="col-6 col-md-3  ">
                <div class="icon_box_two">
                    <i class="ion-ios-calendar-outline"></i>
                    <div class="content">
                        <h5 class="box_title">
                            DATE
                        </h5>
                        <p>
                           @Event.ApplicationDate
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-3  ">
                <div class="icon_box_two">
                    <i class="ion-ios-location-outline"></i>
                    <div class="content">
                        <h5 class="box_title">
                            location
                        </h5>
                        <p>
                           @Event.Location, @Event.City, @Event.Country
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-3  ">
                <div class="icon_box_two">
                    <i class="ion-ios-person-outline"></i>
                    <div class="content">
                        <h5 class="box_title">
                            Who Created
                        </h5>
                        <p>
                           @Event.Person.UserName
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-3  ">
                <div class="icon_box_two">
                    <i class="ion-ios-pricetag-outline"></i>
                    <div class="content">
                        <h5 class="box_title">
                            tikets
                        </h5>
                        <p>
                            @Event.NumberOfPersons
                        </p>
                    </div>
                </div>
            </div>



        </div>
    </div>
</section>
